{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center mb-5" >Barème de l'année {{ bareme.anneeAt }}</h1>
        <table class="table table-striped text-center">

            <thead>
                <th></th>
            {% for i in 1..5 %}
                <th>Tranche {{ i }}</th>
            {% endfor %}

            </thead>
            <tbody>
            <tr>
                <td>Min</td>
                {% for data in bareme.tranches %}
                    <td>{{ data.min }}</td>
                {% endfor %}
            </tr>
            <tr>
                <td>Max</td>
                {% for data in bareme.tranches %}
                    <td>{{ data.max }}</td>
                {% endfor %}

            </tr>
            <tr>
                <td>Pourcentage</td>
                {% for data in bareme.tranches %}
                    <td>{{ data.percentage }}</td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="{{ path('bareme.edit',{'bareme': bareme.id}) }}"><button class="btn btn-warning">Editer</button></a>
            <a href="{{ path('bareme.delete',{'bareme': bareme.id}) }}"> <button class="btn btn-danger">Supprimer</button></a>
        </div>


    </div>

{% endblock %}

