{% extends 'base.html.twig' %}

{% block body %}
    <div class="container ">
        <div class="row">
            {{form_start(form)}}
                <div class="col-4">{{ form_row(form.prenom) }}</div>
                <div class="col-4">{{ form_row(form.BirthdayAt) }}</div>
                <div class="col-md-1"><button class="btn btn-primary">{{ button|default('Créer') }}</button></div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container text-center">
        {% if childs %}
            <table class="table table-striped">
                <thead>
                    <th>Prénom</th>
                    <th>Date d'anniversaire</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                {% for child in childs %}
                    <tr>
                        <td>{{ child.prenom }}</td>
                        <td>{{ child.birthdayAt|date("d/m/Y") }}</td>
                        <td>
                            <a  href="{{ path('contribuable.child.edit', {'child': child.id}) }}"><i class="fas fa-pen"></i></a>
                            {{ include('contribuable/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

                {% else %}
                <h3>Vous n'avez pas ajouté d'enfant</h3>
        {% endif %}
    </div>
{% endblock %}

{% block title %}

{% endblock %}

